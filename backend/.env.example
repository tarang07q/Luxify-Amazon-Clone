# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/luxify

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d
COOKIE_EXPIRE=30

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Luxify

# Client URL (for email links)
CLIENT_URL=http://localhost:3004

# File Upload Configuration
MAX_FILE_UPLOAD=1000000
FILE_UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_SECRET_KEY=admin-secret-123

# Redis Configuration (for sessions/caching - optional)
REDIS_URL=redis://localhost:6379

# AWS S3 Configuration (for file storage - optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key

# Google Analytics (optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Social Media Login (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Security Headers
CORS_ORIGIN=http://localhost:3004,http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3005

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Performance Monitoring (optional)
SENTRY_DSN=your-sentry-dsn

# Feature Flags
ENABLE_REVIEWS=true
ENABLE_WISHLIST=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
