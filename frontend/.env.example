# API Configuration
VITE_API_URL=http://localhost:5000/api

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# App Configuration
VITE_APP_NAME=Luxify
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Premium E-commerce Platform

# Google Analytics (optional)
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Google Maps API (for address autocomplete - optional)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Media Login (optional)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT_SUPPORT=false

# Development Configuration
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=false

# CDN Configuration (for production)
VITE_CDN_URL=https://cdn.luxify.com

# Sentry Configuration (for error tracking)
VITE_SENTRY_DSN=your-sentry-dsn

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Third-party Services
VITE_CRISP_WEBSITE_ID=your-crisp-chat-id
VITE_HOTJAR_ID=your-hotjar-id
